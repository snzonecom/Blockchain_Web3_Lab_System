<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Science Lab Borrow-Return System</title>
    <link rel="stylesheet" href="/css/user.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
</head>

<body>

    <!-- Back to Home Button -->
    <a href="/" class="back-button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256">
            <path
                d="M208,72H128V32a8,8,0,0,0-13.66-5.66l-96,96a8,8,0,0,0,0,11.32l96,96A8,8,0,0,0,128,224V184h80a16,16,0,0,0,16-16V88A16,16,0,0,0,208,72Zm0,96H120a8,8,0,0,0-8,8v28.69L35.31,128,112,51.31V80a8,8,0,0,0,8,8h88Z">
            </path>
        </svg>
        Back to Home
    </a>

    <!-- Tabs for Equipment Categories -->
    <div class="tabs">
        <button class="tab active" onclick="showTab('available')">Available Equipment</button>
        <button class="tab" onclick="showTab('borrowed')">Active Borrowed Equipment</button>
    </div>

    <!-- Available Equipment List -->
    <div id="available" class="equipment-list active">
        <div class="equipment-grid">
            <% if (equipmentList.length===0) { %>
                <p>No available equipment at the moment.</p>
                <% } else { %>
                    <% equipmentList.forEach(equipment=> { %>
                        <div class="equipment-card">
                            <div class="equipment-title">
                                <%= equipment.name %>
                            </div>
                            <div class="equipment-description">
                                <%= equipment.description %>
                            </div>
                            <div class="status-badge status-available">Status: Available</div>
                            <button class="borrow-button" data-id="<%= equipment.id %>">Borrow</button>
                        </div>
                        <% }); %>
                            <% } %>
        </div>
    </div>

    <!-- Borrowed Equipment Lists -->
    <div id="borrowed" class="equipment-list">
        <div class="equipment-grid">
            <% if (borrowedEquipment.length===0) { %>
                <p>No borrowed equipment.</p>
                <% } else { %>
                    <% borrowedEquipment.forEach(equipment=> { %>
                        <div class="equipment-card">
                            <div class="equipment-title">
                                <%= equipment.name %>
                            </div>
                            <div class="status-badge borrow-badge">Borrowed Time: <%= new Date(equipment.borrowTime *
                                    1000).toLocaleString() %>
                            </div>
                            <button class="return-button" data-id="<%= equipment.id %>">Return</button>
                        </div>
                        <% }); %>
                            <% } %>
        </div>
    </div>

    <script>
        function showTab(tabId) {
            // Hide all equipment lists
            document.querySelectorAll('.equipment-list').forEach(list => {
                list.classList.remove('active');
            });

            // Show the selected tab
            document.getElementById(tabId).classList.add('active');

            // Update active tab styling
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>
    <script src="/js/user.js"></script>

</body>

</html>